include ../mixins/modal-form

.modal.main-modal#offer
  .modal__overlay
    .modal__content
      .modal__header
        span.lw-section-title Заполните форму и мы обязательно свяжемся с вами</span>
        button(type="button" aria-label="Закрыть").modal-closer
          svg(width="18" height="18")
            use(xlink:href="./assets/sprite.svg#icon-close")

      .modal__body
        +modal-form({
          buttonText: 'Оставить заявку',
          formName: 'Рассчитать стоимость',

          fields: [
            {
              type: 'text',
              label: 'Имя*',
              required: true,
              id: 'offer_user_name',
              name: 'Имя',
      half: true
            },
            {
              type: 'tel',
              label: 'Телефон*',
              required: true,
              id: 'offer_user_phone',
              name: 'Телефон',
      half: true
            },

            {
              type: 'text',
              label: 'Электронная почта*',
              required: true,
              id: 'offer_user_mail',
              name: 'Электронная почта',
      half: true
            },
            {
              type: 'file',
              label: 'Прикрепить файл',
              required: false,
              id: 'offer_constr_count',
              name: 'Прикрепить файл',
      half: true
            },
            {
              type: 'textarea',
              label: 'Комментарий',
              required: false,
              id: 'offer_user_text',
              name: 'Комментарий'
            }
          ]
        })
