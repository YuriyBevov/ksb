include ../mixins/modal-form

.modal.main-modal#employee
  .modal__overlay
    .modal__content
      .modal__header
        button(type="button" aria-label="Закрыть").modal-closer
          svg(width="18" height="18")
            use(xlink:href="./assets/sprite.svg#icon-close")

        span.lw-section-title Заполните форму и мы обязательно свяжемся с вами</span>

      .modal__body
        +modal-form({
          buttonText: 'Вызвать замерщика',
          formName: 'Вызов замерщика на объект',

          fields: [
            {
              type: 'text',
              label: 'Имя*',
              required: true,
              id: 'empl_user_name',
              name: 'Имя'
            },
            {
              type: 'tel',
              label: 'Телефон*',
              required: true,
              id: 'empl_user_phone',
              name: 'Телефон'
            },
            {
              type: 'text',
              label: 'Количество конструкций*',
              required: true,
              id: 'empl_constr_count',
              name: 'Количество конструкций'
            },
            {
              type: 'text',
              label: 'Адрес объекта*',
              required: true,
              id: 'empl_user_address',
              name: 'Адрес объекта'
            }
          ]
        })
